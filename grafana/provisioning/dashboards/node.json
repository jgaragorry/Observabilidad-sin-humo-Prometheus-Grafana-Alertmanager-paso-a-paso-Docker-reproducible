{
  "title": "Node Exporter Alerts",
  "uid": "node-exporter-alerts",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "CPU Load",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m Load",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes",
          "legendFormat": "Available %",
          "refId": "B"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "graph",
      "title": "Filesystem Errors",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "node_filesystem_device_error",
          "legendFormat": "Errors",
          "refId": "C"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 24,
        "h": 8
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  }
}

